<?xml version="1.0"?>
<?xml-model href="http://download.ros.org/schema/package_format3.xsd" schematypens="http://www.w3.org/2001/XMLSchema"?>
<package format="3">
  <name>astar_pathplanner</name>
  <version>1.0.0</version>
  <description>A* path planning algorithm for robot navigation in ROS2 and Gazebo simulation</description>
  <maintainer email="karolyangqian14@gmail.com">Karol Yangqian Poetracahya</maintainer>
  <license>Apache-2.0</license>
  <author email="karolyangqian14@gmail.com">Karol Yangqian Poetracahya</author>

  <buildtool_depend>ament_cmake</buildtool_depend>

  <!-- Core ROS2 dependencies -->
  <depend>rclcpp</depend>
  <depend>std_msgs</depend>
  <depend>geometry_msgs</depend>
  <depend>nav_msgs</depend>
  <depend>tf2_ros</depend>
  <depend>tf2_geometry_msgs</depend>
  
  <!-- Launch system dependencies -->
  <exec_depend>launch_ros</exec_depend>
  <exec_depend>launch</exec_depend>
  
  <!-- Navigation stack dependencies -->
  <exec_depend>nav2_map_server</exec_depend>
  <exec_depend>nav2_lifecycle_manager</exec_depend>
  
  <!-- Simulation dependencies -->
  <exec_depend>turtlebot3_gazebo</exec_depend>
  <exec_depend>gazebo_ros</exec_depend>
  <exec_depend>gazebo_ros_pkgs</exec_depend>
  
  <!-- Visualization dependencies -->
  <exec_depend>rviz2</exec_depend>
  <exec_depend>rviz_common</exec_depend>
  <exec_depend>rviz_default_plugins</exec_depend>

  <!-- Testing dependencies -->
  <test_depend>ament_lint_auto</test_depend>
  <test_depend>ament_lint_common</test_depend>
  <test_depend>ament_cmake_gtest</test_depend>

  <export>
    <build_type>ament_cmake</build_type>
  </export>
</package>
